<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Slot based Time-Table</title>
    <link rel="stylesheet" href="/css/timetable.css">
</head>
<body>
    <h1>Slot based Time-Table</h1>
    <table>
        <thead>
            <tr>
                <th></th>
                <th>08:35AM - 09:25AM</th>
                <th>09:30AM - 10:20AM</th>
                <th>10:25AM - 11:15AM</th>
                <th>11.20AM - 12:10PM</th>
                <th>12:15 PM - 01:05 PM</th>
                <th>01:10PM - 02:00PM</th>
                <th>2:05PM - 2:55PM</th>
                <th>3:00PM - 3:50PM</th>
                <th>3:50PM - 4:40PM</th>
            </tr>
        </thead>
        <tbody>
            <% const days = ['MON', 'TUE', 'WED', 'THU', 'FRI', 'SAT']; %>
            <% days.forEach(day => { %>
                <tr>
                    <td rowspan="2"><%= day %></td>
                    <td>Theory</td>
                    <% for(let i = 0; i < 9; i++) { %>
                        <td class="theory <%= day.toLowerCase() %>-theory-<%= i+1 %>"></td>
                    <% } %>
                </tr>
                <tr>
                    <td>Lab</td>
                    <% for(let i = 0; i < 9; i++) { %>
                        <td class="lab <%= day.toLowerCase() %>-lab-<%= i+1 %>"></td>
                    <% } %>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>